   438 00000109 D3E0                            shl ax,cl       ; Shift left and clear Carry flag
   439 0000010B 40                              inc ax          ; AL = Sector 1
   440 0000010C 91                              xchg ax,cx      ; CH = Track, CL = Sector
   441 0000010D C3                              ret
